{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es6",
      "module":"commonjs",
      "lib": ["es2017", "dom"],
      "strict": false,
      "sourceMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "dist",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*"
    ]
  }
  